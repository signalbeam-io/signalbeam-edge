{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:8080"
      }
    }
  },
  "ReverseProxy": {
    "Routes": {
      "devices-route": {
        "ClusterId": "device-manager",
        "Match": {
          "Path": "/api/devices/{**catch-all}"
        }
      },
      "registration-tokens-route": {
        "ClusterId": "device-manager",
        "Match": {
          "Path": "/api/registration-tokens/{**catch-all}"
        }
      },
      "authentication-logs-route": {
        "ClusterId": "device-manager",
        "Match": {
          "Path": "/api/authentication-logs/{**catch-all}"
        }
      },
      "certificates-route": {
        "ClusterId": "device-manager",
        "Match": {
          "Path": "/api/certificates/{**catch-all}"
        }
      },
      "groups-route": {
        "ClusterId": "device-manager",
        "Match": {
          "Path": "/api/groups/{**catch-all}"
        }
      },
      "bundles-route": {
        "ClusterId": "bundle-orchestrator",
        "Match": {
          "Path": "/api/bundles/{**catch-all}"
        }
      },
      "rollouts-route": {
        "ClusterId": "bundle-orchestrator",
        "Match": {
          "Path": "/api/rollouts/{**catch-all}"
        }
      },
      "phased-rollouts-route": {
        "ClusterId": "bundle-orchestrator",
        "Match": {
          "Path": "/api/phased-rollouts/{**catch-all}"
        }
      },
      "heartbeat-route": {
        "ClusterId": "telemetry-processor",
        "Match": {
          "Path": "/api/heartbeat/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "device-manager": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5296"
          }
        }
      },
      "bundle-orchestrator": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "telemetry-processor": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5003"
          }
        }
      }
    }
  }
}
